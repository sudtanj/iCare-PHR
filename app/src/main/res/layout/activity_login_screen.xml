<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:agv="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:fitsSystemWindows="true"
    android:fillViewport="true">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <kr.pe.burt.android.lib.animategradientview.AnimateGradientView
            android:id="@+id/agv"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_centerInParent="true"
            agv:agv_alpha="1.0"
            agv:agv_angle="45"
            agv:agv_animation="flow"
            agv:agv_duration="1000"
            agv:agv_endColor="#FFFFFF"
            agv:agv_gradient_scale="1.4"
            agv:agv_startColor="@color/colorPrimary" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingLeft="24dp"
            android:paddingRight="24dp"
            android:paddingTop="56dp">

            <ImageView
                android:id="@+id/logo"
                android:layout_width="wrap_content"
                android:layout_height="173dp"
                android:layout_gravity="center_horizontal"
                android:layout_marginBottom="24dp"
                android:contentDescription="TODO"
                android:elevation="5dp"
                android:src="@drawable/logo" />

            <org.altmail.displaytextview.DisplayTextView
                android:id="@+id/logo_description"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:background="@drawable/rectangle"
                android:gravity="center_horizontal"
                android:text="@string/logo_description"
                android:textSize="28sp"
                android:textStyle="italic"
                android:fontFamily="sans-serif-light"
                app:AutoSizePadding="true"
                app:CharacterAnimatedTogether="3"
                app:MaxTextSize="80sp"
                app:MultiLineAnimation="false" />

            <com.google.android.gms.common.SignInButton
                android:id="@+id/sign_in_button"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="24dp"
                android:layout_marginTop="24dp"
                android:padding="12dp" />

        </LinearLayout>

    </FrameLayout>

</ScrollView>