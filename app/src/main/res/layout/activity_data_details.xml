<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_weight="1"
    android:orientation="vertical"
    tools:context=".Frontend.Fragment.DataCatalogue.DataDetail.DataDetails">

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <com.github.mikephil.charting.charts.LineChart
                android:id="@+id/data_line_chart"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="0.8">

            </com.github.mikephil.charting.charts.LineChart>

            <com.isapanah.awesomespinner.AwesomeSpinner
                android:id="@+id/show_by_spinner"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                app:spinnerDirection="ltr"
                app:spinnerHint="Show graph by" />

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.25"
        android:gravity="center_horizontal"
        android:orientation="horizontal">

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center_vertical|center_horizontal"
            android:layout_weight="0.3">

            <com.malinskiy.superrecyclerview.SuperRecyclerView
                android:id="@+id/current_data_recycler_view"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                app:recyclerClipToPadding="true"
                app:recyclerPadding="16dp" />
        </android.support.v7.widget.CardView>

        <android.support.v7.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="fill_parent"
            android:layout_weight="0.15" />
    </LinearLayout>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="0.3">

        <co.intentservice.chatui.ChatView
            xmlns:chatview="http://schemas.android.com/apk/res-auto"
            android:id="@+id/comment_chat_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            chatview:inputHint="@string/comment_box_hint"
            >

            <com.nightonke.boommenu.BoomMenuButton
                android:id="@+id/bmb"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_weight="1"
                android:visibility="invisible" />
        </co.intentservice.chatui.ChatView>
    </android.support.v7.widget.CardView>

</LinearLayout>